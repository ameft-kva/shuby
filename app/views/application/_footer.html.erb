<footer class="w-full bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="container mx-auto px-4 py-8">
    <%# Main Footer Content %>
    <div class="flex flex-col gap-6">
      <%# Logo and Tagline %>
      <div class="flex flex-col items-center sm:flex-row sm:items-center gap-3">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "shuby/illustrations/mascot-centered.svg", class: "w-8 h-8", alt: "Shuby" %>
          <span class="shuby-d2 text-gray-900 dark:text-white">Shuby</span>
        <% end %>
        <span class="hidden sm:block text-gray-300 dark:text-gray-600">|</span>
        <p class="shuby-p2 text-gray-500 dark:text-gray-400 text-center sm:text-left">
          Il tuo compagno per i primi 1000 giorni
        </p>
      </div>

      <%# Navigation Links %>
      <nav class="flex flex-wrap justify-center gap-4 sm:gap-6">
        <%= link_to t(".announcements"), announcements_path, class: "shuby-p2 text-gray-600 hover:text-[var(--color-shuby-blue-800)] dark:text-gray-400 dark:hover:text-white transition-colors" %>
        <%= link_to t(".about"), about_path, class: "shuby-p2 text-gray-600 hover:text-[var(--color-shuby-blue-800)] dark:text-gray-400 dark:hover:text-white transition-colors" %>
        <%= link_to t(".privacy"), privacy_path, class: "shuby-p2 text-gray-600 hover:text-[var(--color-shuby-blue-800)] dark:text-gray-400 dark:hover:text-white transition-colors" %>
        <%= link_to t(".terms"), terms_path, class: "shuby-p2 text-gray-600 hover:text-[var(--color-shuby-blue-800)] dark:text-gray-400 dark:hover:text-white transition-colors" %>
      </nav>

      <%# Copyright %>
      <div class="pt-4 border-t border-gray-100 dark:border-gray-800">
        <p class="shuby-p2 text-gray-400 dark:text-gray-500 text-center">
          &copy; <%= Date.current.year %> <%= Jumpstart.config.business_name %>. Tutti i diritti riservati.
        </p>
      </div>
    </div>
  </div>
</footer>
