<%# Shuby Bottom Navigation Bar %>
<%# Usage: <%= render "shared/shuby_bottom_nav", active: "oggi" %> %>
<% active ||= nil %>

<nav class="shuby-bottom-nav shuby-bottom-nav-fixed">
  <%= link_to root_path, class: "shuby-bottom-nav-item #{'active' if active == 'oggi'}" do %>
    <div class="shuby-bottom-nav-icon">
      <%= render_svg "shuby/icons/icon-dashboard", styles: "w-6 h-6" %>
    </div>
    <span class="shuby-bottom-nav-label">Oggi</span>
  <% end %>

  <%= link_to shuby_chats_path, class: "shuby-bottom-nav-item #{'active' if active == 'ai-helper'}" do %>
    <div class="shuby-bottom-nav-icon">
      <%= render_svg "shuby/icons/icon-robot", styles: "w-6 h-6" %>
    </div>
    <span class="shuby-bottom-nav-label">AI-helper</span>
  <% end %>

  <%= link_to "#", class: "shuby-bottom-nav-item #{'active' if active == 'archivio'}" do %>
    <div class="shuby-bottom-nav-icon">
      <%= render_svg "shuby/icons/icon-book", styles: "w-6 h-6" %>
    </div>
    <span class="shuby-bottom-nav-label">Archivio</span>
  <% end %>

  <%= link_to "#", class: "shuby-bottom-nav-item #{'active' if active == 'gestione'}" do %>
    <div class="shuby-bottom-nav-icon">
      <%= render_svg "shuby/icons/icon-settings", styles: "w-6 h-6" %>
    </div>
    <span class="shuby-bottom-nav-label">Gestione</span>
  <% end %>
</nav>
