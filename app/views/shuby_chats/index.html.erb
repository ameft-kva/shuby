<% content_for :title, "Shuby - Chat Assistant" %>

<div class="container px-4 mx-auto my-8 pb-24">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <%= image_tag "shuby/icons/icon-robot.svg", class: "w-10 h-10", alt: "Shuby" %>
      <div>
        <h1 class="shuby-h2">Shuby</h1>
        <p class="shuby-p2">Il tuo assistente per lo sviluppo infantile</p>
      </div>
    </div>
    <%= link_to shuby_chats_path, data: { turbo_method: :post }, class: "shuby-btn shuby-btn-md shuby-btn-primary" do %>
      <%= image_tag "shuby/icons/icon-add.svg", class: "w-5 h-5 mr-2", style: "filter: brightness(0) invert(1);", alt: "" %>
      Nuova conversazione
    <% end %>
  </div>

  <% if @shuby_chats.any? %>
    <div class="space-y-3">
      <% @shuby_chats.each do |chat| %>
        <%= link_to shuby_chat_path(chat), class: "block p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow border border-gray-200 dark:border-gray-700" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-medium text-gray-900 dark:text-white truncate">
                <%= chat.display_title %>
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <%= chat.messages.count %> messaggi â€¢ <%= time_ago_in_words(chat.updated_at) %> fa
              </p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-gray-400">
              <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 shuby-card">
      <%= image_tag "shuby/illustrations/mascot-scale.svg", class: "w-32 h-32 mx-auto mb-4", alt: "Shuby mascot" %>
      <h3 class="shuby-h3 mt-4">Nessuna conversazione</h3>
      <p class="shuby-p2 mt-2">Inizia una nuova conversazione con Shuby</p>
      <%= link_to shuby_chats_path, data: { turbo_method: :post }, class: "shuby-btn shuby-btn-md shuby-btn-primary mt-4" do %>
        Inizia a chattare
      <% end %>
    </div>
  <% end %>
</div>

<%# Bottom Navigation %>
<%= render "shared/shuby_bottom_nav", active: "ai-helper" %>
